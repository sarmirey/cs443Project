<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".GuesstheNumbers">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="casual"
        android:text="Guess the Numbers!"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/firstplus"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:onClick="firstplus"
            android:text="+"
            android:textSize="20dp" />

        <Button
            android:id="@+id/secondplus"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:onClick="secondplus"
            android:text="+"
            android:textSize="20dp" />

        <Button
            android:id="@+id/thirdplus"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:onClick="thirdplus"
            android:text="+"
            android:textSize="20dp" />

        <Button
            android:id="@+id/fourthplus"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:onClick="fourthplus"
            android:text="+"
            android:textSize="20dp" />

        <Button
            android:id="@+id/fifthplus"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:onClick="fifthplus"
            android:text="+"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/firsttnumber"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/secondnumber"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/thirdnumber"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/fourthnumber"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/fifthnumber"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/firstminus"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:onClick="firstminus"
            android:text="-"
            android:textSize="20dp" />

        <Button
            android:id="@+id/secondminus"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="-"
            android:textSize="20dp" />

        <Button
            android:id="@+id/thirdminus"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="-"
            android:textSize="20dp" />

        <Button
            android:id="@+id/fourthminus"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="-"
            android:textSize="20dp" />

        <Button
            android:id="@+id/fifthminus"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="-"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/Done"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Done Selecting" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Random Generated Numbers are "
        android:textAlignment="center"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/firstRandom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/secondRandom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/thirdRandom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/fourthRandom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/fifthRandom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30dp" />
    </LinearLayout>

    <Button
        android:id="@+id/message"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="Congrats!!! \n You Won! \n CLICK HERE"
        android:visibility="invisible" />


</LinearLayout>