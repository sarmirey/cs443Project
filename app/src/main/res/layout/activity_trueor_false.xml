<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pickaGame">

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/scoretag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:padding="16dp"
            android:text="Score:"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="casual"
            android:padding="16dp"
            android:text="0"
            android:textSize="30dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Question:"
        android:textSize="25dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:id="@+id/questiontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:text="Is it True that a dog is as smart as a 2 year toddler? "
        android:textAlignment="center"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/trueB"
            android:layout_width="199dp"
            android:layout_height="80dp"
            android:background="#2196F3"
            android:fontFamily="casual"
            android:text="True"
            android:textColor="#fff"
            android:textSize="28dp" />

        <Button
            android:id="@+id/falseB"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="#F44336"
            android:fontFamily="casual"
            android:text="False"
            android:textColor="#fff"
            android:textSize="28dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20dp"
        android:text="To win the prize you must have at least 17/20 points."
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/hiddenButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Button"
        android:visibility="invisible" />


</LinearLayout>
