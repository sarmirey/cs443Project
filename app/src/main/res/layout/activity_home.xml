<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REYS PET CLINIC"
        android:textColor="#000000"
        android:textSize="30dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome back sarmirey!"
        android:textColor="#000000"
        android:textSize="15dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/dogandcat"
        />
    <Button
        android:id="@+id/Vets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded"
        android:onClick="vetButton"
        android:text="Vets"
        android:textStyle="bold" />

    <Button
        android:id="@+id/adopt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded"
        android:onClick="adoptPets"
        android:text="Adopt Pets"
        android:textStyle="bold" />

    <Button
        android:id="@+id/winPrizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded"
        android:onClick="win_prizes"
        android:text="Win some Prizes"
        android:textStyle="bold" />


</LinearLayout>